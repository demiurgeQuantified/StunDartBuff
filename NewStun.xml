        <Affliction identifier="progressivestun" strength="22.5" />
      </StatusEffect>
    </Effect>
    <Effect minstrength="99" maxstrength="100">
      <StatusEffect target="Character" setvalue="true">
        <ReduceAffliction identifier="pstunspeedcontroller" amount="100" />
        <Affliction identifier="progressivestun" strength="100" />
      </StatusEffect>
    </Effect>
    <icon texture="Content/UI/MainIconsAtlas.png" sourcerect="640,640,128,128" color="0,255,0,255" origin="0,0"/>
