    </Effect>
    <Effect minstrength="30" maxstrength="40" strengthchange="-2">
      <StatusEffect target="Character">
        <Affliction identifier="progressivestun" strength="5" />
      </StatusEffect>
    </Effect>
    <Effect minstrength="30" maxstrength="40" strengthchange="-2">
      <StatusEffect target="Character">
        <Affliction identifier="progressivestun" strength="7.5" />
      </StatusEffect>
    </Effect>
    <Effect minstrength="40" maxstrength="50" strengthchange="-2">
      <StatusEffect target="Character">
        <Affliction identifier="progressivestun" strength="10" />
      </StatusEffect>
    </Effect>
    <Effect minstrength="50" maxstrength="60" strengthchange="-2">
      <StatusEffect target="Character">
        <Affliction identifier="progressivestun" strength="12.5" />
